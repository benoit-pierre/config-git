[advice]
	statusHints = false
[alias]
	a = add
	ai = add --interactive
	ap = add --patch
	br = branch
	ca = commit --amend
	cd = -C
	ci = commit -v
	cia = commit -v -a
	cip = commit -v --patch
	cipa = commit -v --patch --amend
	cipm = commit -v --patch --message
	co = checkout
	cop = checkout --patch
	cp = cherry-pick
	cv = commit -v
	cx = clean -x -d -i
	cy = cherry -v --abbrev
	d = diff
	db = diff --ignore-space-change
	diffstat = diff --stat
	ds = diff --staged
	dw = !git --no-pager diff --color-words=\"[^[:space:]]|([[:alnum:].]|UTF_8_GUARD)+\"
	ff = merge --ff --ff-only
	fixup = commit -v --patch --fixup
	g = grep
	l = log
	last = !git --no-pager log --relative-date --pretty=\"tformat:%C(auto,blue)%>(14,mtrunc)%ar %C(auto,yellow)%h%C(auto,reset) %<($(($(tput cols || echo 80)-23)),trunc)%s\" --max-count=$(($(tput lines || echo 20)/2+1))
	lf = log --follow
	ll = log --relative-date --pretty='tformat:%C(auto,blue)%>(14,mtrunc)%ar %C(auto,yellow)%h%C(auto,reset) %<(80,trunc)%s'
	llr = log --relative-date --pretty='tformat:%C(auto,blue)%>(14,mtrunc)%ar %C(auto,yellow)%h%C(auto,reset) %<(80,trunc)%s' --reverse
	lp = log -p
	lr = log --reverse
	m = merge
	missing = cherry --verbose --abbrev HEAD
	new =  log --reverse ORIG_HEAD..HEAD
	outgoing = log --oneline --reverse @{push}..
	p = pull --ff-only
	r = rebase
	ra = rebase --abort
	rc = rebase --continue
	ri = rebase --interactive
	s = status --short --branch
	sa = stash apply
	sp = stash save --patch
	ss = stash show --patch
	st = status --short --branch --untracked-files=no
	sub = submodule
	subf = submodule foreach
	subfg = submodule foreach git --no-pager
	unstash = stash pop
	ub = update-branch
	vs = !vim +GitStatus
[cherry]
	abbrev = true
	verbose = true
[color]
	pager = false
	ui = auto
[diff]
	mnemonicprefix = true
	renames = true
	submodule = log
[format]
	coverletter = auto
	inline = true
	numbered = auto
[interactive]
	singlekey = true
[grep]
	lineNumber = true
[merge]
	tool = kdiff3
[push]
	default = current
[rebase]
	autosquash = true
[sendemail]
	annotate = true
	confirm = always
	multiedit = true
	smtpserver = /usr/bin/msmtp
	suppresscc = self
[status]
	submodulesummary = true
[user]
	email = benoit.pierre@gmail.com
	name = Benoit Pierre
